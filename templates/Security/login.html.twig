{% extends 'MangoWebBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Login</h1>
    </div>

    {% if error %}
        <div>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('mango_user_security_check') }}" method="POST">
        <fieldset>
            {{ form_errors(form) }}

            {{ form_row(form._username) }}
            {{ form_row(form._password) }}
            {{ form_rest(form) }}
            <div class="checkbox">

                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                    {{ 'sylius.form.user.remember_me'|trans }}
                </label>
            </div>
            <div class="pull-right">
                <p>
                    <a href="{{ path('mango_user_request_password_reset_token') }}">{{ 'sylius.ui.forgot_password'|trans }}</a>
                    <a href="{{ path('mango_user_registration') }}">{{ 'sylius.ui.no_account'|trans }}</a>
                </p>
            </div>
        </fieldset>

        <button type="submit" class="btn btn-primary">
            {{ 'sylius.ui.login'|trans }}
        </button>
    </form>
{% endblock %}
